<?xml version='1.0' encoding='UTF-8'?>
<project>
  <actions/>
  <description></description>
  <keepDependencies>false</keepDependencies>
  <properties>
    <hudson.model.ParametersDefinitionProperty>
      <parameterDefinitions>
        <hudson.model.StringParameterDefinition>
          <name>CF_RELEASE</name>
          <description>CF release name - eg. cf-154.yml</description>
          <defaultValue>cf-154.yml</defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>CF_MANIFEST</name>
          <description>CF manifest name - eg. cf_ci.yml</description>
          <defaultValue>cf_ci.yml</defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>STEMCELL_NAME</name>
          <description>Stemcell name - from official s3 buckets - eg. bosh-stemcell-1868-aws-xen-ubuntu.tgz</description>
          <defaultValue>bosh-stemcell-1868-aws-xen-ubuntu.tgz</defaultValue>
        </hudson.model.StringParameterDefinition>
      </parameterDefinitions>
    </hudson.model.ParametersDefinitionProperty>
  </properties>
  <scm class="hudson.plugins.git.GitSCM" plugin="git@2.0.1">
    <configVersion>2</configVersion>
    <userRemoteConfigs>
      <hudson.plugins.git.UserRemoteConfig>
        <url>https://github.com/FreightTrain/C3CI-private.git</url>
      </hudson.plugins.git.UserRemoteConfig>
    </userRemoteConfigs>
    <branches>
      <hudson.plugins.git.BranchSpec>
        <name>*/master</name>
      </hudson.plugins.git.BranchSpec>
    </branches>
    <doGenerateSubmoduleConfigurations>false</doGenerateSubmoduleConfigurations>
    <submoduleCfg class="list"/>
    <extensions>
      <hudson.plugins.git.extensions.impl.CleanCheckout/>
      <hudson.plugins.git.extensions.impl.SubmoduleOption>
        <disableSubmodules>false</disableSubmodules>
        <recursiveSubmodules>true</recursiveSubmodules>
      </hudson.plugins.git.extensions.impl.SubmoduleOption>
    </extensions>
  </scm>
  <canRoam>true</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers class="vector"/>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <hudson.tasks.Shell>
      <command>export PATH=$PATH:/var/vcap/packages/ruby/bin

RUBY_VERSION=$(ruby -v | awk &apos;{print $2}&apos;)
export GEM_HOME=/var/vcap/store/gems/$RUBY_VERSION/$JOB_NAME
export GEM_PATH=$GEM_HOME

export PATH=$PATH:$GEM_HOME/bin

gem install bundler -v 1.3.5

cd C3CI

bundle

bundle exec rake cf:upload_and_deploy_release[\
`pwd`/cf-release/releases/${CF_RELEASE},\
`pwd`/../cf/${CF_MANIFEST},\
https://${BOSH_MICRO_IP}:25555,\
`pwd`/cf-release/,\
http://bosh-jenkins-artifacts.s3.amazonaws.com/bosh-stemcell/aws/${STEMCELL_NAME}\
]</command>
    </hudson.tasks.Shell>
  </builders>
  <publishers/>
  <buildWrappers/>
</project>